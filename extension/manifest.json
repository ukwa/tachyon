{
   "manifest_version": 2,
   "minimum_chrome_version": "57",
   "name": "UKWA Player",
   "version": "0.0.2",
   "background": {
       "scripts": ["tachyon.js"]
   },
   "icons": { 
           "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" 
   },
   "browser_action": {
    "default_icon": "icon-off.png",
    "default_title": "UKWA Player - Browsing The Web Of The Past",
    "default_popup": "popup.html"
   },
   "protocol_handlers": [
  {
    "protocol": "web+webarchive",
    "name": "Web Archive Bookmark Viewer",
    "uriTemplate": "./webarchive-bookmark.html#%s"
  }
  ],
   "omnibox": {
    "keyword": "web+webarchive"
   },
   "web_accessible_resources": [
       "webarchive-bookmark.html"
   ],
   "permissions": [
       "webRequest",
       "<all_urls>",
       "webRequestBlocking",
       "proxy",
       "browsingData",
       "tabs"
    ],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://maxcdn.bootstrapcdn.com https://unpkg.com/ https://code.jquery.com https://cdnjs.cloudflare.com; object-src 'self'"
}
